extends ../layouts/designer

block content
  a Hello {{yourname || 'world'}}!
  input(type="text",ng-model="query",placeholder="World")
  .span3
    .well.sidebar-nav.affix.toolbar
      ul(ng-controller="RoomDesignerController").nav.nav-list
        li.nav-header Region
        li(ng-repeat="shape in shapes | filter:query").item
          a {{shape.name}}        
        li.item
          a(id='btnAddRegion' href="#" name="RectRegion" config='{"x":"0", "y":"0", "width":"600", "height":"600", "r":"0"}') Rect Region
        li.nav-header Table
        li.item
          a(id='btnAddTable' href="#" name="RectTable" config='{"x":"0", "y":"0", "width":"70", "height":"30", "r":"5"}') Square Table
        li.item
          a(id='btnAddTable' href="#" name="RectTable" config='{"x":"0", "y":"0", "width":"70", "height":"30", "r":"0"}') Round Table
        li.nav-header Seat
        li.item
          a(id='btnAddSeat' href="#" name="RectSeat" config='{"x":"0", "y":"0", "width":"20", "height":"20", "r":"0"}') Seat
  .span9